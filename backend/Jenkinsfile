pipeline {
    agent any
    environment {
        // Use your Public IP or Tailscale IP.
        // 77.90.39.240 is your Public IPv4.
        REMOTE_HOST = '100.106.60.43'
        REMOTE_USER = 'mike'
        REMOTE_PATH = '/home/mike/cartshare'
        SSH_CRED_ID = 'vps4g_ml_key' // Ensure this Jenkins Credential contains your 'vps4g_ml_key'
        JAR_NAME    = 'backend-0.0.1-SNAPSHOT.jar'
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building with Gradle...'
                dir('backend') {
                    sh 'chmod +x gradlew'
                    sh './gradlew clean build -x test'
                }
            }
        }
        stage('Deploy') {
            steps {
                sshagent([env.SSH_CRED_ID]) {
                    echo "Uploading JAR to ${env.REMOTE_HOST}..."
                    // rsync is better than scp for speed!
                    sh "rsync -avz -e 'ssh -o StrictHostKeyChecking=no' backend/build/libs/${env.JAR_NAME} ${env.REMOTE_USER}@${env.REMOTE_HOST}:${env.REMOTE_PATH}/"

                    echo 'Restarting Service on VPS...'
                    // Note: Ensure the service name matches exactly what you created (myapp.service)
                    sh "ssh -o StrictHostKeyChecking=no ${env.REMOTE_USER}@${env.REMOTE_HOST} 'sudo systemctl restart myapp.service'"
                }
            }
        }
        stage('Verify') {
            steps {
                sshagent([env.SSH_CRED_ID]) {
                    echo 'Checking Service Status...'
                    sh "ssh -o StrictHostKeyChecking=no ${env.REMOTE_USER}@${env.REMOTE_HOST} 'systemctl status myapp.service --no-pager'"
                }
            }
        }
    }
}